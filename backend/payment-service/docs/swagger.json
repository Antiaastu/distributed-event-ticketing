{
    "swagger": "2.0",
    "info": {
        "description": "This is the payment service.",
        "title": "Payment Service API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:3004",
    "basePath": "/api",
    "paths": {
        "/payments/initialize": {
            "post": {
                "description": "Initialize a payment with Chapa",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "payments"
                ],
                "summary": "Initialize Payment",
                "parameters": [
                    {
                        "description": "Payment Input",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handlers.InitializePaymentRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        },
        "/payments/verify/{tx_ref}": {
            "get": {
                "description": "Verify a payment transaction",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "payments"
                ],
                "summary": "Verify Payment",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Transaction Reference",
                        "name": "tx_ref",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "handlers.InitializePaymentRequest": {
            "type": "object",
            "required": [
                "amount",
                "booking_id",
                "email",
                "first_name",
                "last_name",
                "user_id"
            ],
            "properties": {
                "amount": {
                    "type": "number"
                },
                "booking_id": {
                    "type": "integer"
                },
                "email": {
                    "type": "string"
                },
                "first_name": {
                    "type": "string"
                },
                "last_name": {
                    "type": "string"
                },
                "user_id": {
                    "type": "integer"
                }
            }
        }
    }
}